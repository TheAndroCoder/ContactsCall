<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#00000000"
        android:elevation="14dp"
        android:padding="5dp"
     >
        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/first_letterbg"
        android:text="S"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/firstletter"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="40dp"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Name here"
        android:id="@+id/namehere"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/firstletter"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberhere"
        android:text="Number here"
        android:textSize="15dp"
        android:textColor="#010101"
        android:layout_toRightOf="@+id/firstletter"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/namehere"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:textSize="8dp"
                android:text="time here"
                android:textColor="#010101"
                android:layout_below="@+id/numberhere"
                android:layout_toRightOf="@+id/firstletter"
                android:layout_marginLeft="25dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00010101"
                android:layout_alignParentRight="true"
                android:src="@drawable/callbtn"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/call"/>
        </RelativeLayout>

  </android.support.v7.widget.CardView>

</RelativeLayout>