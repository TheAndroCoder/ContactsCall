<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mostusedtextviewname"
        android:textColor="#010101"
        android:text="Sachin"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mostusedtextviewnumber"
        android:text="number here"
        android:textColor="#f2010101"
        android:textSize="15dp"/>
   </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00010101"
        android:layout_alignParentRight="true"
        android:src="@drawable/callbtn"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/mostusedcall"/>
</RelativeLayout>