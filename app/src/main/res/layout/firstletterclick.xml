<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/bb"
    android:background="@drawable/firstletterbg1"></RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/bb"
       android:padding="30dp"
       android:background="@drawable/firstletterbg2">
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          app:cardCornerRadius="20dp"
          android:layout_height="200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Name here"
               android:textSize="30dp"
               android:id="@+id/firstletternamehere"
               android:textAlignment="center"
               android:layout_marginTop="15dp"
               android:textColor="#030b51"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Number here"
               android:textSize="20dp"
               android:id="@+id/firstletternumberhere"
               android:textAlignment="center"
               android:layout_marginTop="45dp"
               android:textColor="#010101"/>
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_marginBottom="5dp"
               android:text="CALL"
               android:background="@drawable/allbtnbg"/>
        </RelativeLayout>

      </android.support.v7.widget.CardView>
   </RelativeLayout>
   <TextView
       android:layout_width="125dp"
       android:layout_height="125dp"
       android:background="@drawable/first_letterbg"
       android:text="S"

       android:gravity="center"
       android:layout_marginTop="125dp"
       android:layout_centerHorizontal="true"
       android:id="@+id/firstletter"
       android:textAlignment="center"
       android:textColor="#ffffff"
       android:textSize="80dp"/>
</RelativeLayout>